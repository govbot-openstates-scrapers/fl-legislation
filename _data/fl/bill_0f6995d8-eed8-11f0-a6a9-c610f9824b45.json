{"legislative_session": "2026", "identifier": "HB 923", "title": "Recovery Residences", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": ["subject index"], "abstracts": [{"note": "summary", "abstract": "Recovery Residences;  Prohibits certain service providers from using certified recovery residence to provide housing for patients; provides exception; authorizes license transfers; revises definition of term \"transfer\"; requires DCF to issue regular license from existing licensed service provider that is seeking to add licensed services or one or more additional levels of care at existing licensed location or at one or more new locations; provides that room size & occupancy limits in certain space are governed by Florida Building Code & Florida Fire Prevention Code; authorizes authorized agent of certifying entity to conduct specified inspections; provides requirements for certain inspections; revises time in which service provider must notify department of certain personnel; prohibits credentialing agency from requesting or using certain records, policies, or procedures in general or in suspension or revocation of certificate; removes provision requiring certified recovery residence to immediately remove person from certain position; provides that certain records of certified recovery residences are confidential."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed", "date": "2025-12-29", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}], "sponsorships": [{"name": "Owen", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Owen\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "H 923 Filed", "links": [{"url": "https://flsenate.gov/Session/Bill/2026/923/BillText/Filed/PDF", "media_type": "application/pdf"}], "date": "", "classification": ""}], "documents": []